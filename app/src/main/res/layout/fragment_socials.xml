<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:weightSum="50"
    android:showDividers="middle"
    android:divider="@drawable/rect">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:text="Поделиться"
        android:id="@+id/tvShareTitle"
        android:textAlignment="center"
        android:background="@color/green"
        android:visibility="visible"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:background="@drawable/but_gray"
        android:id="@+id/layVk"
        android:layout_weight="7">

        <ImageButton
            android:id="@+id/vkontakte_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/vk_android"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ВКонтакте"
            android:id="@+id/textView30"
            android:textColor="#222222"
            android:textSize="20sp"
            android:layout_marginLeft="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:background="@drawable/but_gray"
        android:id="@+id/layFace"
        android:layout_weight="7">

        <ImageButton
            android:id="@+id/facebook_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/facebook_android"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:id="@+id/textView31"
            android:textColor="#222222"
            android:textSize="20sp"
            android:layout_marginLeft="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:background="@drawable/but_gray"
        android:id="@+id/layTwit"
        android:layout_weight="7">

        <ImageButton
            android:id="@+id/twitter_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/twitter_android"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twitter"
            android:id="@+id/textView32"
            android:textColor="#222222"
            android:textSize="20sp"
            android:layout_marginLeft="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:background="@drawable/but_gray"
        android:id="@+id/layOk"
        android:layout_weight="7">

        <ImageButton
            android:id="@+id/odk_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/odn_android"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Одноклассники"
            android:id="@+id/textView33"
            android:textColor="#222222"
            android:textSize="20sp"
            android:layout_marginLeft="15dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/android_share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/share_but"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <com.facebook.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="1dp"
        android:layout_height="1dp"
        facebook:confirm_logout="false"
        facebook:fetch_user_info="true"
        android:visibility="visible" />

</LinearLayout>










