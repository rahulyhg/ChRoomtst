<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Восстановить пароль"
        android:id="@+id/tvResetTitle"
        android:textAlignment="center"
        android:background="@color/izum_blue"
        android:visibility="visible"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Введите номер телефона, указанный при регистрации, - мы вышлем на него новый пароль"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05"
        android:autoText="false"
        android:background="@drawable/corners"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="clip_horizontal|fill_vertical" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+7"
            android:id="@+id/textView5"
            android:layout_marginLeft="15dp"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etResetPhone"
            android:layout_marginLeft="10dp"
            android:background="@drawable/corners"
            android:autoText="false"
            android:layout_marginRight="15dp"
            android:inputType="phone" />

    </TableRow>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отправить"
        android:id="@+id/butResetPass"
        android:paddingBottom="10dp"
        android:background="@drawable/but_green"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />
</LinearLayout>