<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/rect"
    android:showDividers="middle"
    android:background="@color/white"
    android:weightSum="80"
    android:paddingTop="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <!-- Введите имя -->
            <FrameLayout
                style="@style/style_Find"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="0dp"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:maxHeight="80dp"
                    android:id="@+id/edSearchName"
                    android:longClickable="false"
                    android:background="@drawable/cornersspinner"
                    android:hint="Введите имя"
                    android:textColor="@color/color_find"
                    android:textColorHint="@color/color_find"
                    android:textSize="18dp"
                    android:inputType="textCapSentences|textPersonName"/>

                <ImageView
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageIcon"
                    android:src="@drawable/find" />
            </FrameLayout>

            <!-- Регион -->

            <Spinner
                style="@style/style_Find"
                android:id="@+id/spinSearchRegion"
                android:entries="@array/regions"
                android:spinnerMode="dialog" />

            <!-- Город -->

            <Spinner
                style="@style/style_Find"
                android:id="@+id/etSearchCity"
                android:cursorVisible="false"
                android:spinnerMode="dialog" />

            <!-- Пол -->

            <Spinner
                style="@style/style_Find"
                android:id="@+id/spinSearchSex"
                android:entries="@array/sex"
                android:spinnerMode="dialog" />

            <!-- Возраст -->
            <FrameLayout
                style="@style/style_Find"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Возраст"
                    android:textSize="18dp"
                    android:inputType="number"
                    android:textColor="@color/color_find"
                    android:ems="10"
                    android:id="@+id/etSearchAge1"
                    android:linksClickable="false"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:editable="false"
                    android:cursorVisible="false"/>

                <ImageView
                    android:paddingLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/age" />
            </FrameLayout>

            <!-- Цель знакомства -->

            <Spinner
                style="@style/style_Find"
                android:id="@+id/spinSearchHerefor"
                android:entries="@array/herefor"
                android:cursorVisible="false"
                android:autoText="false"
                android:spinnerMode="dialog" />

            <!-- Онлайн -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:id="@+id/textView6"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="28dp" />

                <CheckBox
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/cbSearchOnline"
                    android:button="@drawable/checkbox_selector_g"
                    android:textStyle="bold"
                    android:elegantTextHeight="false"
                    android:layout_gravity="center_vertical" />
            </TableRow>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Поиск"
                android:id="@+id/butSearch"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/but_green"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>