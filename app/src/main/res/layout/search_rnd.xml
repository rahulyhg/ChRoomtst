<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivSearchRnd"
        android:src="@drawable/search_random"
        android:layout_centerInParent="true"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Потрясите вашим телефоном из стороны в сторону"
        android:id="@+id/textView11"
        android:layout_below="@+id/ivSearchRnd"
        android:layout_centerHorizontal="true"
        android:longClickable="false"
        android:linksClickable="false"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Встряска"
        android:id="@+id/tvSearchRndTitle"
        android:textAlignment="center"
        android:background="@color/green"
        android:visibility="visible"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>