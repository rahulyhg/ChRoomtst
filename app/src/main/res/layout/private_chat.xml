<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/topRowChat"
        android:layout_width="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/izum_blue"
        android:layout_height="40dp">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/butNewsBack"
            android:background="@drawable/but_green"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:src="@drawable/back_left"
            android:scaleType="fitCenter"
            android:padding="10dp" />

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/but_green"
            android:id="@+id/big_button">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:id="@+id/ivChatAvatar"
                android:src="@drawable/ic_launcher"
                android:background="@android:color/transparent"
                android:padding="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profileBack"
                android:background="@android:color/transparent"
                android:textStyle="bold"
                android:text="Nick"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingLeft="7dp"
                android:gravity="center_vertical" />
        </TableRow>



        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/butFile"
            android:background="@drawable/but_green"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="10dp"
            android:src="@drawable/screpka"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/ibStar"
            android:src="@drawable/star"
            android:background="@drawable/but_green"
            android:scaleType="centerInside"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_for_fragment"
        android:orientation="vertical" />

</LinearLayout>