<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/green"
        android:id="@+id/topRowAbout">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/setBack"
            android:src="@drawable/back_left"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:id="@+id/textView23"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="20sp" />


    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:weightSum="60"
        android:layout_weight="60"
        android:background="@color/white">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/laySetPrivate"
            android:clickable="true"
            android:background="@drawable/but_gray"
            android:paddingLeft="30dp">

            <Button
                android:background="@drawable/but_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Приватность"
                android:id="@+id/tvPrivate"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:paddingLeft="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/laySetWallet"
            android:clickable="true"
            android:background="@drawable/but_gray"
            android:paddingLeft="30dp"
            android:visibility="gone">

            <Button
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Кошелёк"
                android:id="@+id/tvWallet"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:paddingLeft="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:clickable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/laySetChatSet"
            android:clickable="true"
            android:background="@drawable/but_gray"
            android:paddingLeft="30dp">

            <Button
                android:background="@drawable/but_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Настройки чатов"
                android:id="@+id/tvChatSet"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:paddingLeft="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/laySetColor"
            android:clickable="true"
            android:background="@drawable/but_gray"
            android:paddingLeft="30dp">

            <Button
                android:background="@drawable/but_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цветовая схема"
                android:id="@+id/tvColor"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:paddingLeft="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/laySetRate"
            android:clickable="true"
            android:background="@drawable/but_gray"
            android:paddingLeft="30dp">

            <Button
                android:background="@drawable/but_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оценить"
                android:id="@+id/tvRate"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:paddingLeft="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/laySetAbout"
            android:clickable="true"
            android:background="@drawable/but_gray"
            android:paddingLeft="30dp">

            <Button
                android:background="@drawable/but_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="О программе"
                android:id="@+id/tvAbout"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:paddingLeft="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/laySetExit"
            android:clickable="true"
            android:background="@drawable/but_gray"
            android:paddingLeft="30dp">

            <Button
                android:background="@drawable/but_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выход"
                android:id="@+id/tvExit"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:paddingLeft="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>